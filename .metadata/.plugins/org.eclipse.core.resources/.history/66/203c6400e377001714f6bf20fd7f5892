package game;

import java.util.ArrayList;

public class MonopolyPlayer implements IMonopolyPlayer {

	int money;
	ArrayList<IMonopolySquare> owned;
	int position;
	String name;
	
	@Override
	public int subtractMoney(int val) {
		return money -= val;
	}

	@Override
	public int addMoney(int val) {
		return money+= val;
	}

	@Override
	public boolean ownsProperty(IMonopolySquare square) {
		return owned.contains(square);
	}

	public int getMoney() {
		return money;
	}

	public void setMoney(int money) {
		this.money = money;
	}

	public ArrayList<IMonopolySquare> getOwned() {
		return owned;
	}

	public void setOwned(ArrayList<IMonopolySquare> owned) {
		this.owned = owned;
	}

	public int getPosition() {
		return position;
	}

	public void setPosition(int position) {
		this.position = position;
	}

	
}
