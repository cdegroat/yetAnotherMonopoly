package game;

import java.util.ArrayList;

public class Board implements IBoard {

	ArrayList<IMonopolySquare> squares;
	
	public Board(){
		for(int i= 0;i < 40;i ++){
			squares.add(new MonopolySquare());
		}
	}
	@Override
	public ArrayList<IMonopolySquare> getSquares() {
		return squares;
	}
	public void setSquares(ArrayList<IMonopolySquare> squares) {
		this.squares = squares;
	}
	public int movePlayerToSquare(int roll, IMonopolyPlayer player){
		player.setPosition(player.getPosition()+roll);
		if(player.getPosition() > 40){
			player.setPosition(player.getPosition()-40);
		}
		return player.getPosition();
	}

}
